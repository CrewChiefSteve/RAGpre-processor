# Azure Document Intelligence (Required)
AZURE_DOC_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOC_KEY=your-azure-key-here

# Phase D: Vision features (optional)
# If not set, vision features will be disabled
OPENAI_API_KEY=sk-proj-your-key-here
VISION_MODEL=gpt-5-mini
ENABLE_HANDWRITING_VISION=true
ENABLE_DIAGRAM_CAPTIONING=true

# Phase B+: Hybrid diagram detection (Step 5C)
# Enable Vision-based diagram segmentation for pages without Azure diagrams
ENABLE_VISION_DIAGRAM_SEGMENTATION=true
# Maximum number of pages to scan with Vision (cost control)
VISION_DIAGRAM_PAGE_LIMIT=20

# Vision Debug Mode (Optional)
# Enable debug artifact generation for vision-based diagram detection
# When true, saves rendered page PNGs, diagram overlays, and segmentation JSON
# under out/jobs/{jobId}/debug/vision/ for web jobs
ENABLE_VISION_DEBUG=false
